<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="Clases">
 
    <class name="Ciudad" table="CIUDAD">
 
        <composite-id>
            <key-property name="nombre" column="NOMBRE"  />
            <key-property name="pais" column="PAIS" />
        </composite-id>
  
        <set name="Promociones" table="PROMOCION_CIUDAD" inverse="true" lazy="true" fetch="select" cascade="all"> 
         <key>
            <column name="NOMBRE" not-null="true"/>
            <column name="PAIS" not-null="true"/>            
         </key>
            <many-to-many column="IDENTIFICADOR" class="Clases.Promocion"></many-to-many>
        </set>
        
        
    </class>
  
</hibernate-mapping>